<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popup"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/ADDM"
        android:layout_marginStart="58dp"
        android:layout_alignTop="@+id/ADDC"
        android:layout_toEndOf="@+id/ADDC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetContact"
        android:id="@+id/ADDC"
        android:layout_marginBottom="109dp"
        android:layout_marginStart="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n1"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ADDC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n2"
        android:layout_alignTop="@+id/n1"
        android:layout_alignEnd="@+id/ADDM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n3"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/n1"
        android:layout_alignStart="@+id/n1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/n4"
        android:layout_alignTop="@+id/n3"
        android:layout_alignEnd="@+id/ADDM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/n5"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/n3"
        android:layout_alignStart="@+id/n3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/n6"
        android:layout_alignTop="@+id/n5"
        android:layout_alignEnd="@+id/ADDM" />

</RelativeLayout>